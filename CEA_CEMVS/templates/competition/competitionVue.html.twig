{% extends 'base.html.twig' %}

{% block title %}
Entrainements
{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Nom</th>
				<th>Date</th>
				<th>Heure de d√©but</th>
				<th>Heure de fin</th>
            </tr>
            </thead>
            <tbody>
            {% set token = csrf_token('ENTRAINEMENT_DELETE') %}
			<tr>
                <td>{{ Competition.nom }}</td>
				<td>{{ Competition.DateFin|date('Y-m-d') }}</td>
				<td>{{ Competition.DateDebut|date('H:i:s') }}</td>
				<td>{{ Competition.DateFin|date('H:i:s') }}</td>
				{% if is_granted('ROLE_ADMIN') %}
					<td><a class="btn btn-danger" href="{{ path('deleteCompetition',{id:Competition.id,token:token, saison:2019}) }}">Supprimer</a></td>
                {% endif %}
			</tr>
            </tbody>
        </table>
    </div>
{% endblock %}